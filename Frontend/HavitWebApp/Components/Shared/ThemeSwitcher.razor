@inject ThemeService ThemeService

<div class="d-flex align-items-center gap-2">
    <i class="bi bi-palette"></i>
    <select class="form-select form-select-sm" style="width: auto;" @onchange="OnThemeChanged" value="@ThemeService.CurrentTheme">
        <option value="@ThemeMode.Light">Light</option>
        <option value="@ThemeMode.Dark">Dark</option>
        <option value="@ThemeMode.Dracula">Dracula</option>
    </select>
</div>

@code {
    private async Task OnThemeChanged(ChangeEventArgs e)
    {
        if (e.Value is string theme)
        {
            await ThemeService.SetThemeAsync(theme);
        }
    }
}
